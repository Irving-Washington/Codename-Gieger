;class: level-loader
;superclass: object
;this class manages the collision and seethrough properties of
;level objects.

(define level-loader%
  
  (class object%
    
    (super-new)
    
    ;Retrieves the level image for the level class.
    (define/public (get-level-image num)
      (cdr (assq num level-image-list)))
    
    ;Retrieves the level data, which is defined as a matrix.
    ;A 0 means that the game objects can move through and see through.
    ;A 1 means that the game objects can move through, but not see through.
    ;A 2 means that the game objects can not move through, but can see through
    ;A 3 means that the game objects can neither move nor see through.
    (define/public (get-level-data num)
      (let ((matrix (new matrix% 
                         [rows (car *level-size*)]
                         [columns (cdr *level-size*)])))
        (send matrix set-matrix-representation! (cdr (assq num level-list)))
        matrix))
    
